<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@color/primary">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/share"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Preview Card -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_preview"
                style="@style/TitleText"
                android:layout_marginBottom="16dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_preview_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardStyle"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/preview_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        style="@style/TitleText"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/preview_stats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š 0 Questions â€¢ 0% Accuracy â€¢ Starter Member"
                        style="@style/BodyText"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/preview_interests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ Interests: Programming, Android"
                        style="@style/CaptionText"
                        android:layout_gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- QR Code Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR Code"
                style="@style/TitleText"
                android:layout_marginBottom="16dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/qr_code_image"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/border"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/generate_qr_button"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="@string/generate_qr_code"
                        style="@style/PrimaryButton"
                        android:layout_marginBottom="0dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Sharing Options -->
            <LinearLayout
                android:id="@+id/sharing_options_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sharing Options"
                    style="@style/TitleText"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/share_via_apps_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/share_via_apps"
                    style="@style/PrimaryButton"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/copy_link_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/copy_link"
                    style="@style/SecondaryButton" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView> 